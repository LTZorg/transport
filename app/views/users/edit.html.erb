<% provide(:title, "Редактирование пользователя") %>
<h1>Обновление профиля</h1>

<div class="row">
  <div class="col-md-6 col-md-push-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Имя" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Электронная почта" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить изменения", class: "btn btn-lg btn-danger" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target= "_blank">Сменить аватар</a>
  </div>
</div>