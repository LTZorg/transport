<% provide(:title, "Вход") %>
<h1>Вход</h1>

<div class="row">
  <div class="col-md-6 col-md-push-3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      
      <%= f.label :email, "Электронная почта" %>
      <%= f.text_field :email %>
      
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>
      
      <%= f.submit "Вход", class: "btn btn-lg btn-danger" %>
    <% end %>
  </div>
</div>
